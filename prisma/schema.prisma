generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model ParkingLot {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enters    Enter[]
}

model User {
  id        Int      @id @default(autoincrement())
  phone     Int?     @unique
  email     String?  @unique
  name      String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Enter {
  id           Int        @id @default(autoincrement())
  carNumber    String
  imageUrl     String
  parkingLot   ParkingLot @relation(fields: [parkingLotId], references: [id])
  parkingLotId Int
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([parkingLotId])
}

model Coupon {
  id        Int      @id @default(autoincrement())
  name      String
  type      Int
  value     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
